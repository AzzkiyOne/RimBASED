<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs
            /ThingDef[
                defName="BandNode"
                or defName="GeneAssembler"
                or defName="GeneExtractor"
                or defName="GrowthVat"
                or defName="WastepackAtomizer"
                or defName="GeneProcessor"
                or defName="ToxifierGenerator"
                or defName="LargeMechGestator"
                or defName="MechGestator"
                or defName="SubcoreSoftscanner"
                or defName="SubcoreRipscanner"
                or defName="BasicRecharger"
                or defName="StandardRecharger"
            ]
        </xpath>
        <value>
            <minifiedDef>MinifiedThing</minifiedDef>
        </value>
    </Operation>

    <!-- Category -->

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs
            /ThingDef[
                defName="BandNode"
                or defName="GeneAssembler"
                or defName="GeneExtractor"
                or defName="GrowthVat"
                or defName="WastepackAtomizer"
                or defName="GeneProcessor"
                or defName="BasicRecharger"
                or defName="StandardRecharger"
            ]
        </xpath>
        <value>
            <thingCategories>
                <li>BuildingsMisc</li>
            </thingCategories>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs
            /ThingDef[defName="ToxifierGenerator"]
        </xpath>
        <value>
            <thingCategories>
                <li>BuildingsPower</li>
            </thingCategories>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs
            /ThingDef[
                defName="LargeMechGestator"
                or defName="MechGestator"
                or defName="SubcoreSoftscanner"
                or defName="SubcoreRipscanner"
            ]
        </xpath>
        <value>
            <thingCategories>
                <li>BuildingsProduction</li>
            </thingCategories>
        </value>
    </Operation>

    <!-- Mass -->

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs
            /ThingDef[
                defName="SubcoreSoftscanner"
                or defName="SubcoreRipscanner"
            ]
            /statBases
        </xpath>
        <value>
            <Mass>40</Mass>
        </value>
    </Operation>

</Patch>
