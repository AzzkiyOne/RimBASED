<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationReplace">
        <xpath>
            Defs
            /ThingDef[
                defName="GroundPenetratingScanner"
                or defName="LongRangeMineralScanner"
            ]
            /canBeUsedUnderRoof
        </xpath>
        <value>
            <canBeUsedUnderRoof>true</canBeUsedUnderRoof>
        </value>
    </Operation>

    <Operation Class="PatchOperationRemove">
        <xpath>
            Defs
            /ThingDef[
                defName="GroundPenetratingScanner"
                or defName="LongRangeMineralScanner"
            ]
            /placeWorkers
            /li[text()="PlaceWorker_NotUnderRoof"]
        </xpath>
    </Operation>

</Patch>
