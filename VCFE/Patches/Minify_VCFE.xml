<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs
            /ThingDef[
                defName="PS_ChemfuelTank"
                or defName="PS_DeepchemTank"
                or defName="PS_DeepchemRefinery"
            ]
        </xpath>
        <value>
            <minifiedDef>MinifiedThing</minifiedDef>
        </value>
    </Operation>

    <!-- Category -->

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs
            /ThingDef[
                defName="PS_ChemfuelTank"
                or defName="PS_DeepchemTank"
            ]
        </xpath>
        <value>
            <thingCategories>
                <li>BuildingsMisc</li>
            </thingCategories>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs
            /ThingDef[defName="PS_DeepchemRefinery"]
        </xpath>
        <value>
            <thingCategories>
                <li>BuildingsProduction</li>
            </thingCategories>
        </value>
    </Operation>

    <!-- Mass -->

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs
            /ThingDef[
                defName="PS_ChemfuelTank"
                or defName="PS_DeepchemTank"
                or defName="PS_DeepchemRefinery"
            ]
            /statBases
        </xpath>
        <value>
            <Mass>40</Mass>
        </value>
    </Operation>

</Patch>
